<% content_for :page_title do %>
  <%= Spree.t(:new_instagram_item) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_instagram_items_list), spree.admin_instagram_items_path, :icon => 'icon-arrow-left' %>
  </li>
   <li>
    <%= button_link_to Spree.t(:go_to_get_instagram_posts), spree.admin_instagram_posts_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @instagram_item } %>

<div id="instagram_item_form_wrapper">
  <%= form_for [:admin, @instagram_item] do |f| %>
		<%= render :partial => 'form', :locals => { :f => f } %>
		<%= render :partial => 'spree/admin/shared/new_resource_links' %>
	<% end %>
</div>